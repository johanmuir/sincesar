<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nombre de Usuario" %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label "Contrasena" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label "Nombre" %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label "Primer Apellido" %><br />
    <%= f.text_field :first_last_name %>
  </div>
  <div class="field">
    <%= f.label "Segundo Apellido" %><br />
    <%= f.text_field :second_last_name %>
  </div>
  <div class="field">
    <%= f.label "Fecha de Nacimiento" %><br />
    <%= f.date_select :date_of_birth, :start_year => 1930, :end_year => Time.now.year - 10 %>
  </div>
  <div class="field">
    <%= f.label "Iglesia a la que asiste" %><br />
    <%= f.text_field :church_attending %>
  </div>
  <div class="field">
    <%= f.label "Pais" %><br />
    <%= f.text_field :country %>
  </div>
  <div class="actions">
    <%= f.submit "Crear Usuario" %>
  </div>
<% end %>
