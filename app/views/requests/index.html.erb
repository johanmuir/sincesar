<h1>Listing requests</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Grupo</th>
    <th>Usuario</th>
    <th>Peticion</th>
    <th>Is public</th>
    <th>Resolucion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.title %></td>
    <td><%= request.group_id %></td>
    <td><%= request.user_id %></td>
    <td><%= request.content %></td>
    <td><%= request.is_public %></td>
    <td><%= request.resolution %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

